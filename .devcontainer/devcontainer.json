{
  "name": "Static Site Dev (Pro)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        // --- Editor Settings ---
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        // Helpful for HTML
        "editor.linkedEditing": true,
        // Shows guides for indentation
        "editor.guides.bracketPairs": true
      },
      "extensions": [
        // --- 1. Formatting & Quality ---
        "esbenp.prettier-vscode", // The standard for formatting
        "dbaeumer.vscode-eslint", // Finds bugs in JS

        // --- 2. HTML Superpowers ---
        "formulahendry.auto-rename-tag", // Rename opening tag -> closing tag updates auto.
        "formulahendry.auto-close-tag", // Automatically adds </...>
        "ecmel.vscode-html-css", // CSS class completion in HTML

        // --- 3. Productivity ---
        "christian-kohler.path-intellisense", // Autocompletes filenames (e.g. src/img/...)
        "ritwickdey.LiveServer", // Instant browser preview

        // --- 4. Visuals ---
        "oderwat.indent-rainbow", // Colors indentation levels (easier to read nested divs)
        "usernamehw.errorlens" // Shows error messages inline (very helpful!)
      ]
    }
  },

  "forwardPorts": [5500],
  "postCreateCommand": "if [ -f package.json ]; then npm install; fi",
  "remoteUser": "node"
}
